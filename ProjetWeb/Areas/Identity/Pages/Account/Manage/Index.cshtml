@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control"/>
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            @if (!User.IsInRole("Customer"))
            {
                <div class="form-floating">
                    <input asp-for="Input.Prenom" class="form-control"/>
                    <label asp-for="Input.Prenom" class="form-label"></label>
                    <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                </div>
            
                <div class="form-floating">
                    <input asp-for="Input.Matricule" class="form-control"/>
                    <label asp-for="Input.Matricule" class="form-label"></label>
                    <span asp-validation-for="Input.Matricule" class="text-danger"></span>
                </div>
            }
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control"/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            @if (!User.IsInRole("Customer")) { 
                <div class="form-floating">
                    <input asp-for="Input.Birthday" class="form-control" />
                    <label asp-for="Input.Birthday" class="form-label"></label>
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>
            }
            <div class="form-floating">
                <input type="file" asp-for="Input.Photo" class="form-control" />
                <label asp-for="Input.Photo" class="form-label"></label>
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
